<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.pestostech.team09.TcpViewFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="70"
        android:background="#000000">

        <ImageView
            android:id="@+id/myImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="30"
        android:layout_marginTop="10dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Zoom in"
            android:id="@+id/buttonZoomIn"
            android:layout_toRightOf="@+id/buttonUp"
            android:background="#3c3f41"
            android:textColor="#ffffff"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Zoom out"
            android:id="@+id/buttonZoomOut"
            android:layout_toRightOf="@id/buttonUp"
            android:layout_below="@+id/buttonZoomIn"
            android:background="#3c3f41"
            android:textColor="#ffffff"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:text="Left"
            android:id="@+id/buttonLeft"
            android:background="#3c3f41"
            android:textColor="#ffffff"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="65dp"
            android:layout_height="100dp"
            android:text="Right"
            android:id="@+id/buttonRight"
            android:layout_toRightOf="@id/buttonLeft"
            android:background="#3c3f41"
            android:textColor="#ffffff"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Up"
            android:id="@+id/buttonUp"
            android:layout_toRightOf="@id/buttonRight"
            android:background="#3c3f41"
            android:textColor="#ffffff"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Down"
            android:id="@+id/buttonDown"
            android:layout_toRightOf="@id/buttonRight"
            android:layout_below="@id/buttonUp"
            android:background="#3c3f41"
            android:textColor="#ffffff"/>
    </RelativeLayout>

</LinearLayout>
